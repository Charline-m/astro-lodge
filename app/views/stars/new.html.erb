<div class="cont">
  <div class="row">
    <div class="col">
      <h1>Créer une nouvelle étoile</h1>

          <%= simple_form_for @star, url: stars_path do |f| %>
          <%= f.input :category, collection: ["Astéroïde", "Comète", "Etoile", "Planète", "Satellite", "Trou noir"], prompt: "Select a category" %>
          <%= f.input :name, label: "Nom de l'étoile" %>

          <div class="form-group">
            <%= f.label :description, "Description" %>
            <%= f.text_area :description, class: "form-control" %>
          </div>

          <%= f.input :price, label: "Prix par nuit en €" %>

          <%= f.input :photo, as: :file %>

          <%= f.button :submit, "Créer", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
