<div class="show-page">
  <div class="container">
    <div class="form-container">
      <div class="form-card">

        <div class="form-group text-center">
          <h2 class="fw-bold" style="color: #64ffda;" ><%= @star.name %></h2>


          <% if @star.photo.attached?%>
            <div class="d-flex justify-content-center mb-3">
              <%= cl_image_tag @star.photo.key, crop: :fill, class: "adaptive-image" %>
            </div>
          <% elsif @star.image_url.present? %>
            <div class="d-flex justify-content-center mb-3">
              <%= image_tag @star.image_url, crop: :fill, class: "adaptive-image" %>
            </div>
          <% else %>
            <div class="d-flex justify-content-center mb-3">
              <%= image_tag "default_image.jpg", alt: "Image par défaut" %>
            </div>
          <% end %>
        </div>

  <p></p>
      <div class="form-group text-center">
        <h2 class="fw-bold" ><%= @star.category %>
      </div>
  <p></p>
          <div class="form-group">
          <p><%= @star.description %></p>
          </div>
  <p></p>
          <div class="form-group">
          <h4 class="fw-bold" ><%= @star.price %> € / nuit</h4>
          </div>

          <p></p>
          <!-- unless @star.user==current_user -->



            <h1><i class="fas fa-rocket"></i>Réservez votre séjour</h1>
            <%= form_with model: [@star, Reservation.new], local: true do |f| %>
            <div class="d-flex justify-content-center">
              <div class="form-group me-3 ">
                <%= f.label :start_date, "Date de début", class: "text-center w-100" %>
                <%= f.date_field :start_date, class: "form-control w-100 mx-auto" %>
              </div>

              <div class="form-group">
                <%= f.label :end_date, "Date de fin", class: "text-center w-100" %>
                <%= f.date_field :end_date, class: "form-control w-100 mx-auto" %>
              </div>
              </div>

              <div class="form-group">

                <%# <p>Total : <span id="total-price">0</span>€</p> %>
              </div>


              <div class="text-center d-flex justify-content-center align-items-center">
                <%= link_to "Revenir aux astres", stars_path, class: "btn-cosmic me-2 align-self-stretch" %>
                <%= f.submit "Réserver", class: "btn-cosmic align-self-stretch " %>
                <% end %>
              </div>

        </div>
      </div>
    </div>
  </div>
</div>
