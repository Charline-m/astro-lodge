<div class="container cosmic-container">
  <div class="logo-container">
    <%= image_tag 'logo.png', alt: 'AstroLodge Logo', title: 'AstroLodge - Destination Cosmique' %>
  </div>


  <div class="hero-card">
    <h1>
      <i class="fas fa-rocket me-2"></i>
      Louez Votre Astre Thérapeutique
    </h1>
    <h2>
      <i class="fas fa-star me-2"></i>
      Une Nuit Sous Les Étoiles, Une Vie Transformée
    </h2>
    <%= link_to stars_path, class: 'btn btn-cosmic' do %>
      <i class="fas fa-space-shuttle me-2"></i>RÉSERVER MA NUIT COSMIQUE
    <% end %>
  </div>

  <div class="benefits-cards">
    <div class="benefit-card">
      <i class="fas fa-globe text-info"></i>
      <h3>Planètes</h3>
      <p>Harmonisez vos émotions en une nuit</p>
    </div>

    <div class="benefit-card">
      <i class="fas fa-star text-info"></i>
      <h3>Étoiles</h3>
      <p>Révélez votre potentiel intérieur</p>
    </div>

    <div class="benefit-card">
      <i class="fas fa-meteor text-info"></i>
      <h3>Comètes</h3>
      <p>Boostez votre énergie vitale</p>
    </div>

    <div class="benefit-card">
      <i class="fas fa-moon text-info"></i>
      <h3>Satellites</h3>
      <p>Développez votre sixième sens</p>
    </div>

    <div class="benefit-card">
      <i class="fas fa-circle text-info"></i>
      <h3>Trous Noirs</h3>
      <p>Renaissez à vous-même en 24h</p>
    </div>
  </div>
</div>

