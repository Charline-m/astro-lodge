<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo_navbar.png", alt: "Logo AstroLodge" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to new_star_path, class: "nav-link nav-button" do %>
              <i class="fas fa-plus-circle me-2"></i>Créer un astre
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to dashboard_path, class: "nav-link nav-button" do %>
              <i class="fas fa-chart-line me-2"></i>Dashboard
            <% end %>
          </li>
          <li class="nav-item dropdown ms-3">
            <%= user_avatar(current_user) %>
            <div class="dropdown-menu dropdown-menu-end custom-dropdown" aria-labelledby="navbarDropdown">
              <div class="dropdown-header">
                <span class="user-name"><%= current_user.name %></span>
                <span class="user-email"><%= current_user.email %></span>
              </div>
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <i class="fas fa-user me-2"></i>Mon profil
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-danger" do %>
                <i class="fas fa-sign-out-alt me-2"></i>Se déconnecter
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link nav-button-login" do %>
              <i class="fas fa-sign-in-alt me-2"></i>Se connecter
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
